{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.example.timevault",
  "productName": "TimeVault",
  "version": "0.1.0",

  "build": {
    "beforeDevCommand": "npm run dev --prefix ./vault-frontend",
    "beforeBuildCommand": "npm run build --prefix ./vault-frontend",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../vault-frontend/dist"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TimeVault",
        "width": 900,
        "height": 700,
        "resizable": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "icon": [
    "icons/icon.ico"
  ]
  }
}
