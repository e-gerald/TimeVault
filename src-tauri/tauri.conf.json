{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.TimeVault.timevault",
  "productName": "TimeVault",
  "version": "v1.0.1-beta",

  "build": {
    "beforeDevCommand": "npm run dev --prefix ./vault-frontend",
    "beforeBuildCommand": "npm run build --prefix ./vault-frontend",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../vault-frontend/dist"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TimeVault",
        "width": 900,
        "height": 700,
        "resizable": true
      }
    ]
  },

  "bundle": {
    "active": true,
    "publisher": "TimeVault",
    "shortDescription": "A secure, non-custodial timed vault for keys and passphrases file storage.",
    "copyright": "Â© 2025 TimeVault",
    "category": "Utility",
    "targets": ["deb", "rpm", "appimage", "nsis", "dmg"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/icon.icns"
    ]
  }
}
